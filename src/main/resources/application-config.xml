<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="elevator" class="com.adimessi30.elevatorsystem.components.concrete.Elevator" scope="prototype"
          init-method="postConstruct"/>
    <bean name="elevatorProvider" class="org.springframework.beans.factory.config.ProviderCreatingFactoryBean">
        <property name="targetBeanName">
            <idref bean="elevator"/>
        </property>
    </bean>
    <bean name="queueManager" class="com.adimessi30.elevatorsystem.components.concrete.ElevatorRequestQueueManager"
          init-method="postConstruct"/>
    <bean name="elevatorRequests" class="java.util.LinkedList"/>
    <bean name="elevators" class="com.adimessi30.elevatorsystem.helpers.CollectionFactory"
          factory-method="generateCollectionFromProvider">
        <constructor-arg ref="elevatorProvider"/>
        <constructor-arg name="size" value="#{systemProperties['user.property.numElevators']}"/>
    </bean>
    <bean name="elevatorRequestConsumer" class="com.adimessi30.elevatorsystem.components.concrete.ElevatorRequestConsumer"
          init-method="init" destroy-method="shutdown">
        <constructor-arg ref="elevators"/>
        <constructor-arg ref="elevatorRequests"/>
        <constructor-arg ref="queueManager"/>
    </bean>
    <bean name="elevatorRequestProcessor"
          class="com.adimessi30.elevatorsystem.components.concrete.ElevatorRequestProcessor" init-method="init"
          destroy-method="shutdown">
        <constructor-arg ref="elevators"/>
        <constructor-arg ref="queueManager"/>
    </bean>
    <bean name="requestDispatcher" class="com.adimessi30.elevatorsystem.components.concrete.RequestDispatcher"
          init-method="postConstruct">
        <constructor-arg ref="elevatorRequests"/>
    </bean>
    <bean name="button" class="com.adimessi30.elevatorsystem.components.concrete.Button"
          scope="prototype" init-method="postConstruct">
        <constructor-arg ref="requestDispatcher"/>
    </bean>
    <bean name="floor" class="com.adimessi30.elevatorsystem.components.concrete.Floor" scope="prototype"
          init-method="postConstruct">
        <constructor-arg name="buttonUp" ref="button"/>
        <constructor-arg name="buttonDown" ref="button"/>
    </bean>
    <bean name="floorProvider" class="org.springframework.beans.factory.config.ProviderCreatingFactoryBean">
        <property name="targetBeanName">
            <idref bean="floor"/>
        </property>
    </bean>
    <bean name="building" class="com.adimessi30.elevatorsystem.components.concrete.Building" init-method="postConstruct">
        <constructor-arg ref="floorProvider"/>
        <constructor-arg name="numFloors" value="#{systemProperties['user.property.numFloors']}"/>
    </bean>
</beans>